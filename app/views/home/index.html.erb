<% if @cur_url == "/recent" %>
  <div class="box" id="leader">
    <em>The <a href="/newest">neueste</a> Beiträge mit einem zufälligen Mix
    von Einträgen, die es noch nicht auf die Startseite geschafft haben.</em>
  </div>
<% end %>

<ol class="stories list <%= @cur_url == "/hidden" ? "show_hidden" : "" %>">
  <%= render :partial => "stories/listdetail", :collection => @stories,
    :as => :story %>
</ol>

<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %><%=
      @page == 2 ? "" : "page/#{@page - 1}" %>">&lt;&lt; Seite
      <%= @page - 1 %></a>
  <% end %>

  <% if @show_more %>
    <% if @page && @page > 1 %>
      |
    <% end %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %>page/<%=
      @page + 1 %>">Seite <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
